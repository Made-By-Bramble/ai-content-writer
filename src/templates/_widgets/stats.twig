<div class="ai-content-writer-stats-widget">
    <div class="stats-grid">
        <div class="stat-item">
            <div class="stat-number">{{ stats.totalEntryTypes }}</div>
            <div class="stat-label">{{ 'Total Entry Types'|t('ai-content-writer') }}</div>
        </div>
        
        <div class="stat-item">
            <div class="stat-number">{{ stats.enabledEntryTypes }}</div>
            <div class="stat-label">{{ 'Enabled for Generation'|t('ai-content-writer') }}</div>
        </div>
        
        <div class="stat-item">
            <div class="stat-number">{{ stats.supportedFieldTypes }}</div>
            <div class="stat-label">{{ 'Supported Field Types'|t('ai-content-writer') }}</div>
        </div>
    </div>
    
    {% if stats.enabledEntryTypes == 0 %}
        <div class="widget-notice">
            <p class="light">{{ 'No entry types enabled for content generation.'|t('ai-content-writer') }}</p>
            <p><a href="{{ cpUrl('settings/plugins/ai-content-writer') }}" class="btn small">{{ 'Configure Settings'|t('ai-content-writer') }}</a></p>
        </div>
    {% endif %}
</div>

{% css %}
.ai-content-writer-stats-widget {
    padding: 0;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    gap: 16px;
    margin-bottom: 16px;
}

.stat-item {
    text-align: center;
}

.stat-number {
    font-size: 24px;
    font-weight: bold;
    color: #0d78f2;
    line-height: 1;
}

.stat-label {
    font-size: 12px;
    color: #8f98a3;
    margin-top: 4px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.widget-notice {
    text-align: center;
    padding: 16px 0;
}

.widget-notice p {
    margin-bottom: 8px;
}
{% endcss %}